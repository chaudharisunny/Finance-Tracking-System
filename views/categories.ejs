<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Finance Tracking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="main.css">
</head>
  <body>
    <%-include('./navbar.ejs') %>
    <div class="container">
     
        <div class="mb-3 category">
          <form action="/categories" method="post" class="category-form">
            <h3>Add Category</h3>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Name</label>
              <input type="text" class="form-control" name="name" id="name" required >
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput2" class="form-label">Account</label>
              <select class="form-select" name="type" id="type" required>
                <option selected>Account</option>
               
                    <option value="income">income</option>
                    <option value="expence">expance</option>
               
              </select>
            </div>
          
            <div class="mb-3">
              <label for="exampleFormControlInput3" class="form-label">Description</label>
              <input type="text" class="form-control" name="desc" id="desc" required >
            </div>
            <div class="mb-3">
              <button type="submit" class="btn btn-primary">submit</button>
            </div>
          </form>
          <div class="mb-5 category-table">
            <ol class="list-group list-group-numbered">
              <h5>Expense</h5>
              <% expenceCategories.forEach(category => { %>
                    
                  <li class="list-group-item d-flex justify-content-between align-items-start">
                    
                      <div class="ms-2 me-auto">
                          <div class="fw-bold"><%= category.name %>
                          </div>
                      </div>
                      <div class="cat-btn">
                          <a class="btn btn-success" href="/editCategory/<%=category._id %>">Edit</a>
                          <a class="btn btn-danger" href="/deleteCategory/<%=category._id %>">Delete</a>
                      </div>
                  </li>
              <% }); %>
          </ol>
          <ol class="list-group list-group-numbered">
            <h5>Income</h5>
            <% incomeCategories.forEach(category => { %>
                <li class="list-group-item d-flex justify-content-between align-items-start">
                  
                    <div class="ms-2 me-auto">
                        <div class="fw-bold"><%= category.name %>
                        </div>
                    </div>
                    <div class="cat-btn">
                        <a class="btn btn-success" href="/editCategory/<%=category._id %>">Edit</a>
                        <a class="btn btn-danger" href="/deleteCategory/<%=category._id %>">Delete</a>
                    </div>
                </li>
            <% }); %>
        </ol>
          

        </div>
       
        
        <div class="avilable-details">

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>