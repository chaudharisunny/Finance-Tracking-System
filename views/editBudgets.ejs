<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Budget</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>Edit Budget</h2>
    <form action="/editBudgets/<%= budget._id %>" method="post">
      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select name="category" id="category" class="form-select" required>
          <% showCat.forEach(cat => { %>
            <option value="<%= cat._id %>" 
              <%= budget.category && budget.category._id.toString() === cat._id.toString() ? 'selected' : '' %>>
              <%= cat.name %>
            </option>
          <% }); %>
        </select>
      </div>

      <div class="mb-3">
        <label for="limit" class="form-label">Limit</label>
        <input type="number" class="form-control" id="limit" name="limit" value="<%= budget.limit %>" required>
      </div>

      <button type="submit" class="btn btn-primary">Update</button>
      <a href="/budgets" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
</body>
</html>
