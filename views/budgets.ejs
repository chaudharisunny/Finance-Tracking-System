<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Finance Tracking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="main.css">
</head>
  <body>
    <%-include('./navbar.ejs') %>
    <div class="container">
       
        
        <div class="mb-3 budgets">
          
          <form action="/budgets" method="post" class="budget-form">
            <h3>Budget</h3>
            <div class="mb-3">
              <label for="exampleFormControlInput2" class="form-label">Category</label>
              <select class="form-select" name="category" id="categories" required>
                <option selected>Select a category</option>
                <% showCat.forEach(cat => { %>
                  <option value="<%= cat._id %>"><%= cat.name %></option>
                <% }); %>
              </select>
            </div>
            <div class="mb-3">
              <label for="exampleFormControlInput1" class="form-label">Limit</label>
              <input type="text" class="form-control" name="limit" id="exampleFormControlInput1" required>
            </div>
            <input type="hidden" name="user">
            <div class="mb-3">
              <button type="submit" class="btn btn-primary">Submit</button>
            </div>
          </form>
          
          <div class="budget-table">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Category</th>
                  <th scope="col">Limit</th>
                  <th scope="col">Action</th>
                </tr>
              </thead>
              <tbody>
                
                  <% addBudget.forEach((budget, index) => { %>
                    
                    <tr>
                      <th scope="row"><%= index + 1 %></th>
                     
                        <td><%= budget.category ? budget.category.name : 'No Category' %></td>
                     
                 
                      <td><%= budget.limit %></td>
                      <td class="action-btn">
                        <a href="/editBudgets/<%= budget._id %>" class="btn btn-success">Edit</a>
                        <a href="/deleteBudgets/<%= budget._id %>" class="btn btn-danger">Delete</a>
                      </td>
                    </tr>
                    
                  <% }); %>
                
              </tbody>
            </table>
          </div>


        </div>
        
        
        </div>
        
        <div class="avilable-details">

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>